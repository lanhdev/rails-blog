<p id="notice"><%= notice %></p>

<div class="container">
  <h1>Lanh Hoang's Blog</h1>
<h3>My first Rails Application for CoderSchool!</h3>
<br>
<%= form_tag(articles_path, :method => "get", id: "search-form") do %>
  <%= text_field_tag :search, params[:search], placeholder: "Search title or body" %>
  <%= submit_tag "Search" %>
<% end %>
<br>
<nav class="navbar navbar-dark bg-inverse">
  <a class="navbar-brand" href="#">Blog</a>
  <ul class="nav navbar-nav">
    <li class="nav-item active">
      <a class="nav-link" href="/articles">Home</a>
    </li>
    <li class="nav-item active">
      <a class="nav-link" href="#">Articles</a>
    </li>
    <li class="nav-item active">
      <a class="nav-link" href="#">Archive</a>
    </li>
    <li class="nav-item dropdown">
      <a class="nav-link dropdown-toggle" href="http://example.com" id="supportedContentDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Visit me on</a>
      <div class="dropdown-menu" aria-labelledby="supportedContentDropdown">
        <a class="dropdown-item" href="#">LinkedIn</a>
        <a class="dropdown-item" href="#">GitHub</a>
        <a class="dropdown-item" href="#">Facebook</a>
      </div>
    </li>
  </ul>
</nav>
<br>
<%= link_to 'New Article', new_article_path,
    class: 'btn btn-primary btn-lg' %>
<br>
<br>
<% if @articles.present? %>
  <%= render @articles %>
<% else %>
  <p>There are no articles containing the term(s) <%= params[:search] %>.</p>
<% end %>

</div>


